<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Memo.Views.AboutPage"
             Title="About">
    <Grid RowDefinitions="Auto,*">
        <StackLayout Grid.Row="1"
                     Margin="20"
                     Spacing="20">
            <Label FontSize="22">
                <Label.FormattedText>
                    <FormattedString>
                        <FormattedString.Spans>
                            <Span Text="Memo"
                                  FontAttributes="Bold"
                                  FontSize="22" />
                            <Span Text="                                  
                                  Release v1.2" />
                        </FormattedString.Spans>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label Text="Developers: Kondratev Ivan                                      
                   Zhuchkov Dmitry" FontSize="24" FontAttributes="Italic" />
            <Button CornerRadius="190"  Text="GitHub"
                    Clicked="OnButtonClicked" />
        </StackLayout>
    </Grid>
</ContentPage>